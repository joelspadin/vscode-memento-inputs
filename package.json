{
	"name": "memento-inputs",
	"displayName": "Memento Inputs",
	"description": "Create task inputs that remember their last-used values",
	"repository": {
		"type": "git",
		"url": "https://github.com/ChaosinaCan/vscode-memento-inputs"
	},
	"author": {
		"name": "Joel Spadin",
		"email": "joelspadin@gmail.com",
		"url": "https://github.com/ChaosinaCan"
	},
	"publisher": "spadin",
	"license": "MIT",
	"version": "2.0.0",
	"engines": {
		"vscode": "^1.73.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:memento.pickString",
		"onCommand:memento.promptString",
		"onCommand:memento.rememberString"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "memento.pickString",
				"title": "Pick String"
			},
			{
				"command": "memento.promptString",
				"title": "Prompt String"
			},
			{
				"command": "memento.rememberString",
				"title": "Remember String"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "memento.pickString",
					"when": "false"
				},
				{
					"command": "memento.promptString",
					"when": "false"
				},
				{
					"command": "memento.rememberString",
					"when": "false"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
    	"compile": "tsc -p ./",
    	"watch": "tsc -watch -p ./",
    	"pretest": "npm run compile && npm run lint",
    	"lint": "eslint src --ext ts",
    	"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.0",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.8.4",
		"@vscode/test-electron": "^2.2.0"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"tabWidth": 4,
		"printWidth": 120,
		"endOfLine": "auto"
	}
}
